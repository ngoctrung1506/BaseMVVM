<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:background="@android:color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <Button
            android:text="Add "
            android:layout_width="95dp"
            android:layout_height="36dp"
            android:id="@+id/create_post_add_place_btn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp" android:layout_marginTop="300dp" app:layout_constraintTop_toTopOf="parent"
            android:textAllCaps="false"/>
    <ImageView
            android:src="@drawable/common_google_signin_btn_icon_dark"
            android:layout_width="347dp"
            android:layout_height="141dp"
            android:id="@+id/create_post_object_img"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/create_post_object_name_txt"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"/>
    <Button
            android:text="Save"
            android:layout_width="154dp"
            android:layout_height="59dp"
            android:id="@+id/create_post_save_btn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginTop="576dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="17sp" android:textAllCaps="false"
            android:scrollHorizontally="true"/>

    <EditText android:layout_width="231dp" android:layout_height="29dp"
              android:id="@+id/create_post_object_name_txt"
              android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toStartOf="@+id/create_post_add_object_btn" android:layout_marginEnd="20dp"/>

    <EditText android:layout_width="231dp" android:layout_height="29dp"
              android:id="@+id/create_post_place_name_txt"
              android:layout_marginTop="308dp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toStartOf="@+id/create_post_add_object_btn" android:layout_marginEnd="32dp"/>
    <Button
            android:text="Add "
            android:layout_width="95dp"
            android:layout_height="36dp"
            android:id="@+id/create_post_add_object_btn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp" android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="parent"
            android:textAllCaps="false"/>

    <ImageView
            android:src="@drawable/common_google_signin_btn_icon_dark"
            android:layout_width="347dp"
            android:layout_height="141dp"
            android:id="@+id/create_post_place_img" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/create_post_place_name_txt"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_back"
            android:id="@+id/create_post_btn_back" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
