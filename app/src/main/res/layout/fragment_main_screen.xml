<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:hint="Input your object name"
            android:id="@+id/main_object_name_txt"
            android:background="@android:color/transparent"
            android:layout_width="291dp"
            android:layout_height="34dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintEnd_toStartOf="@+id/main_search_btn"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>

    <ImageButton
            android:layout_width="63dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_search"
            android:id="@+id/main_search_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/item_post"
            android:layout_width="358dp"
            android:id="@+id/main_list_object_recycler"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.062"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/main_add_btn"/>

    <Button
            android:textAllCaps="false"
            android:text="Add object"
            android:layout_width="355dp"
            android:layout_height="36dp"
            android:id="@+id/main_add_btn" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/main_object_name_txt"/>

</androidx.constraintlayout.widget.ConstraintLayout>