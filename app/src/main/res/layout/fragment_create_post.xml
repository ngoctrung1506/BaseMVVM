<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <ImageView
        android:id="@+id/create_post_object_img"
        android:layout_width="347dp"
        android:layout_height="141dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/common_google_signin_btn_icon_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_post_object_name_txt" />

    <Button
        android:id="@+id/create_post_save_btn"
        android:layout_width="154dp"
        android:layout_height="59dp"
        android:layout_marginTop="576dp"
        android:layout_marginEnd="100dp"
        android:scrollHorizontally="true"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textColor="@android:color/black"
        android:id="@+id/create_post_object_name_txt"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/create_post_add_object_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textColor="@android:color/black"
        android:id="@+id/create_post_place_name_txt"
        android:layout_width="231dp"
        android:layout_height="29dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/create_post_add_object_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_post_add_object_btn"
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="44dp"
        android:text="Add "
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/create_post_place_img"
        android:layout_width="347dp"
        android:layout_height="141dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/common_google_signin_btn_icon_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_post_place_name_txt" />

    <ImageView
        android:id="@+id/create_post_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />
</androidx.constraintlayout.widget.ConstraintLayout>
